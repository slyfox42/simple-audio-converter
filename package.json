{
  "name": "simple-audio-converter",
  "version": "0.0.1",
  "description": "Minimal and modern react+electron+webpack boilerplate",
  "author": "Federico Obialero",
  "homepage": "https://github.com/slyfox42/simple-audio-converter",
  "repository": {
    "type": "git",
    "url": "https://github.com/slyfox42/simple-audio-converter.git"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "prod": "webpack --config webpack.build.config.js && electron --noDevServer .",
    "dev": "webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.config.js",
    "build": "webpack --config webpack.build.config.js",
    "package": "webpack --config webpack.build.config.js",
    "postpackage": "electron-packager ./ --out=./builds",
    "lint": "eslint src --ext js,jsx --ignore-path .gitignore --fix"
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/preset-react": "7.0.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "babili-webpack-plugin": "0.1.2",
    "css-loader": "1.0.0",
    "electron": "3.0.5",
    "electron-packager": "12.2.0",
    "eslint": "5.7.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-sort-imports-es6-autofix": "0.3.0",
    "file-loader": "2.0.0",
    "fluent-ffmpeg": "2.1.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.1.2",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "style-loader": "0.23.1",
    "webpack": "4.21.0",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.9"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "babel-runtime": "6.26.0"
  }
}

{
  "name": "simple-audio-converter",
  "version": "0.0.1",
  "description": "Minimal and modern react+electron+webpack boilerplate",
  "author": "Federico Obialero",
  "homepage": "https://github.com/slyfox42/simple-audio-converter",
  "repository": {
    "type": "git",
    "url": "https://github.com/slyfox42/simple-audio-converter.git"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "prod": "webpack --config webpack.build.config.js && electron --noDevServer .",
    "dev": "webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.config.js",
    "build": "webpack --config webpack.build.config.js",
    "package": "webpack --config webpack.build.config.js",
    "postpackage": "electron-packager ./ --out=./builds",
    "lint": "eslint src --ext js,jsx --ignore-path .gitignore --fix"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-react": "7.0.0",
    "autoprefixer": "^9.4.3",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "babili-webpack-plugin": "0.1.2",
    "css-loader": "2.1.0",
    "electron": "4.0.0",
    "electron-packager": "13.0.1",
    "eslint": "5.11.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-sort-imports-es6-autofix": "0.3.0",
    "file-loader": "3.0.1",
    "fluent-ffmpeg": "2.1.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.2.1",
    "lint-staged": "8.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "1.15.3",
    "prop-types": "^15.6.2",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "sass-loader": "^7.1.0",
    "style-loader": "0.23.1",
    "webpack": "4.28.2",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.14"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "babel-runtime": "6.26.0"
  }
}
